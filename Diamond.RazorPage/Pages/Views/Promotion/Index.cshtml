@page
@model Diamond.RazorPage.Pages.Views.Promotion.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Promotions</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            max-width: 1200px;
            display: flex;
        }

        .promotions-list {
            flex: 3;
        }

        .promotion-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            margin-bottom: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            background-color: #fff;
            display: flex;
            padding: 15px;
            align-items: center;
        }

            .promotion-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

            .promotion-card img {
                width: 250px;
                height: auto;
                border-radius: 5px;
                margin-right: 20px;
            }

        .promotion-details {
            flex: 1;
        }

        .promotion-title {
            font-size: 1.25rem; /* Adjust font size for better fit */
            font-weight: bold;
            margin-bottom: 10px;
        }

        .promotion-meta {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 15px;
        }

        .badge {
            display: inline-block;
            padding: 0.5em 1em;
            font-size: 0.75rem;
            font-weight: 700;
            line-height: 1;
            text-align: center;
            white-space: nowrap;
            vertical-align: baseline;
            border-radius: 0.375rem;
            background-color: #f8f9fa;
            color: #212529;
            margin-bottom: 10px;
        }

        .remaining-quantity {
            font-size: 0.9rem;
            color: #6c757d;
            text-align: right;
            margin-top: auto;
        }

        .side-image {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .side-image img {
                width: 100%;
                height: auto;
                max-width: 225px; /* Adjust the max-width to make the image smaller */
                border-radius: 10px;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="promotions-list">
            <h2 class="mb-4">Our Promotions</h2>
            <div class="promotion-card">
                <img src="/images/DiamondSale.png" alt="Back to School Discount" />
                <div class="promotion-details">
                    <h5 class="promotion-title">Get ready for school with our exclusive back-to-school discount.</h5>
                    <p>50% discount when purchasing orders from 2.000.000 VND</p>
                    <span class="badge">BackToSchool</span>
                    <div class="promotion-meta">15/08/2024 - 15/09/2024</div>
                </div>
                <div class="remaining-quantity">Remaining quantity: 30</div>
            </div>

            <div class="promotion-card">
                <img src="/images/DiamondSale.png" alt="Summer Sale" />
                <div class="promotion-details">
                    <h5 class="promotion-title">Celebrate the summer with our special discount.</h5>
                    <p>15% discount when purchasing orders from 5.000.000 VND</p>
                    <span class="badge">SummerSale</span>
                    <div class="promotion-meta">01/06/2024 - 30/07/2024</div>
                </div>
                <div class="remaining-quantity">Remaining quantity: 50</div>
            </div>

            <div class="promotion-card">
                <img src="/images/DiamondSale.png" alt="Valentine's Day" />
                <div class="promotion-details">
                    <h5 class="promotion-title">On the occasion of Valentine's Day, we want to express gratitude to customers.</h5>
                    <p>20% discount when purchasing orders from 10.000.000 VND</p>
                    <span class="badge">Valentine'sDay</span>
                    <div class="promotion-meta">24/05/2024 - 24/06/2024</div>
                </div>
                <div class="remaining-quantity">Remaining quantity: 34</div>
            </div>

            <div class="promotion-card">
                <img src="/images/DiamondSale.png" alt="Black Friday" />
                <div class="promotion-details">
                    <h5 class="promotion-title">Enjoy massive discounts on Black Friday.</h5>
                    <p>25% discount when purchasing orders from 15.000.000 VND</p>
                    <span class="badge">BlackFriday</span>
                    <div class="promotion-meta">25/11/2024 - 30/11/2024</div>
                </div>
                <div class="remaining-quantity">Remaining quantity: 100</div>
            </div>
        </div>
        <div class="side-image">
            <img src="~/images/diamondSaleBanner.png" alt="Side Image" />
        </div>
    </div>
</body>
</html>