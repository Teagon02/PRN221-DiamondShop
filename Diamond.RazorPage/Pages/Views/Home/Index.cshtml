    @page
    @model Diamond.RazorPage.Pages.Views.Home.IndexModel
    @{
        ViewData["Title"] = "Home page";
    }
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="display-4">Our Collection</h1>
            <p class="lead text-muted">Explore our diverse selection of high-quality Jewelry.</p>
        </div>
    </section>

    <div class="py-3 bg-light">
        <div class="container-fluid">
            <div class="row">
                <!-- Filter Section -->
                <div class="col-md-2">
                    <div class="card sticky-top filter-card">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Filters</h5>
                            <form method="get" class="d-flex flex-column justify-content-between flex-grow-1">
                                <div class="mb-3">
                                    <label for="category" class="form-label">Category</label>
                                    <select class="form-select" id="category" name="category">
                                        <option value="">All</option>
                                        @foreach (var category in Model.Categories)
                                        {
                                            <option value="@category.CategoryId" selected="@(category.CategoryId == Model.SelectedCategory ? "selected" : "")">@category.CategoryName</option>
                                        }
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary mt-3" style="background-color: #013A40; border-color: #005826;">Apply Filters</button>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Products Section -->
                <div class="col-md-10">
                    <form method="get" class="mb-4 d-flex justify-content-center search-form">
                        <div class="input-group" style="max-width: 50%;">
                            <input type="text" class="form-control" placeholder="Search..." aria-label="Search" aria-describedby="button-addon2" name="searchTerm" value="@Model.searchTerm">
                            <button class="btn btn-primary" type="submit" id="button-addon2" style="background-color: #013A40; border-color: #005826;">Search</button>
                        </div>
                    </form>

                    <h3 class="h3 text-left">All Jewelry</h3>
                    <div class="row">
                        @foreach (var product in Model.PageProducts.Items)
                        {
                            <div class="col-md-4 mb-4 d-flex align-items-stretch">
                                <div class="card shadow-lg border-0 w-100">
                                    <div style="height: 225px; overflow: hidden;">
                                        @if (product.Images.Any())
                                        {
                                            var firstImageUrl = product.Images.First().Url;
                                            <img src="~/products/@firstImageUrl" class="card-img-top" style="object-fit: cover; width: 100%; height: 100%;" alt="Product Image">
                                        }
                                        else
                                        {
                                            <img src="~/images/default-product-image.jpg" class="card-img-top" style="object-fit: cover; width: 100%; height: 100%;" alt="Default Product Image">
                                        }
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title font-weight-bold text-dark">@product.Name</h5>
                                        <p class="card-text text-muted flex-grow-1">@product.Description</p>
                                        <p class="card-text text-primary">@product.PriceFormatted đ</p>
                                        <a href="/Views/Home/ProductDetail?id=@product.ProductId" class="btn btn-primary mt-auto" style="background-color: #013A40; border-color: #005826;">View Details</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (Model.PageProducts.TotalPages > 1)
                    {
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="?pageIndex=1&searchTerm=@Model.searchTerm">First</a>
                                </li>
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="?pageIndex=@(Model.CurrentPage - 1)&searchTerm=@Model.searchTerm">Previous</a>
                                </li>
                                @for (int i = 1; i <= Model.PageProducts.TotalPages; i++)
                                {
                                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                        <a class="page-link pagination-number @(Model.CurrentPage == i ? "active" : "")" href="?pageIndex=@i&searchTerm=@Model.searchTerm">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.CurrentPage == Model.PageProducts.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="?pageIndex=@(Model.CurrentPage + 1)&searchTerm=@Model.searchTerm">Next</a>
                                </li>
                                <li class="page-item @(Model.CurrentPage == Model.PageProducts.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="?pageIndex=@Model.PageProducts.TotalPages&searchTerm=@Model.searchTerm">Last</a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>

    <style>
        .jumbotron h1 {
            font-family: 'Playfair Display', serif; 
            font-size: 2.5rem;
            color: #b38b6d;
        }

        .lead {
            font-family: 'Lora', serif; /* Elegant font for lead text */
            font-size: 1.25rem;
            font-weight: 300;
            color: #6c757d;
        }

        .card {
            border: none;
            border-radius: .25rem;
        }

        .card-body {
            padding: 1.5rem;
            background-color: #ffffff;
        }

        .card-title {
            font-family: 'Lora', serif;
            font-size: 1.5rem;
            font-weight: 700;
            color: #343a40;
        }

        .card-text {
            font-family: 'Lora', serif;
            font-size: 1rem;
            color: #495057;
        }

        .pagination-number {
            background-color: #013A40;
            border-color: #005826;
            color: white;
        }

            .pagination-number:hover {
                background-color: #005826;
                color: white;
            }

        .page-item.active .page-link.pagination-number {
            background-color: #005826;
            border-color: #005826;
            color: white;
        }

        .page-link.pagination-number {
            color: white; /* Ensuring the text color is white */
        }

        .text-primary {
            color: #b38b6d !important; /* Custom primary color for text */
        }

        .sticky-top {
            position: -webkit-sticky;
            position: sticky;
            top: 20px;
        }

        /* Additional CSS for styling */
        .h3 {
            font-family: 'Lora', serif;
            font-weight: 700;
            color: #343a40;
        }

        .btn-primary {
            font-family: 'Lora', serif;
            font-weight: 700;
        }

        /* Custom margin for search form */
        .search-form {
            margin-right: 230px;
        }

        /* New CSS for extending the filter section */
        .filter-card {
            height: 100vh; /* Make filter card occupy full height */
        }

            .filter-card .card-body {
                display: flex;
                flex-direction: column;
                height: 100%;
            }

            .filter-card form {
                flex-grow: 1;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
    </style>
