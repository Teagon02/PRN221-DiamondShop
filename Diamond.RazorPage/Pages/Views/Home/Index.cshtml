@page
@model Diamond.RazorPage.Pages.Views.Home.IndexModel
@{
    ViewData["Title"] = "Home page";
}
<section class="jumbotron text-center">
    <div class=" container">
        <h1>
            Our Collection
        </h1>
        <p class="lead text-muted">Explore our diverse selection of high-quality Jewelrys. </p>
    </div>

</section>

<div class="py-5 bg-light">
    <div class="container">
        <h3 class="h3">Top Jewelrys</h3>
        <div class="row">
            @foreach (var product in Model.PageProducts.Items)
            { 
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div style="height: 225px; overflow: hidden;">
                            @if (product.Images.Any())
                            {
                                var firstImageUrl = product.Images.First().Url;
                                <img src="~/products/@firstImageUrl" class="card-img-top" style="object-fit: cover; width: 100%; height: 100%;" alt="Product Image">
                            }
                            else
                            {
                                <img src="~/images/default-product-image.jpg" class="card-img-top" style="object-fit: cover; width: 100%; height: 100%;" alt="Default Product Image">
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text">$@product.Price</p>
                            <a href="/Views/Home/ProductDetail?id=@product.ProductId" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }



            @if (Model.PageProducts.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?pageIndex=1">First</a>
                        </li>
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?pageIndex=@(Model.CurrentPage - 1)">Previous</a>
                        </li>
                        @for (int i = 1; i <= Model.PageProducts.TotalPages; i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link" href="?pageIndex=@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.PageProducts.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="?pageIndex=@(Model.CurrentPage + 1)">Next</a>
                        </li>
                        <li class="page-item @(Model.CurrentPage == Model.PageProducts.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="?pageIndex=@Model.PageProducts.TotalPages">Last</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>