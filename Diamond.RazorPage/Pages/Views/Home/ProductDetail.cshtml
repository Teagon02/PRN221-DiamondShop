@page
@model Diamond.RazorPage.Pages.Views.Home.ProductDetailModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <div class="row bg-light py-5">
        <!-- Added bg-light class for background color -->
        <h1>Jewelry detail</h1>
        <!-- Image Section -->
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide w-75" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @foreach (var imageUrl in Model.Product.Images.Select(i => i.Url))
                    {
                        <div class="carousel-item @(imageUrl == Model.Product.Images.Select(i => i.Url).First() ? "active" : "")">
                            <img src="~/products/@imageUrl" class="d-block w-full border img-thumbnail" alt="Product Image">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <h1>@Model.ProductDTO.Name</h1>
            <p>@Model.ProductDTO.Description</p>
            <p>Price: $@Model.ProductDTO.Price</p>
            <div class="row">
                <div></div>
                <div class="col-md-4">
                    <button class="btn btn-primary" type="submit" id="button-addon2" style="background-color: #013A40; border-color: #005826;">
                        <i class="bi bi-cart-plus"></i>
                       Add to Cart
                    </button>
                </div>
            </div>
            <table class="list-group">
                <tr>
                    <td style="font-weight:700; width: 200px">Category</td>
                    <td>@Model.Product.Category.CategoryName</td>
                </tr>
                <tr>
                    <td style="font-weight:700">Main Stone Size</td>
                    <td>@Model.Product.MainStoneSize</td>
                </tr>
                <tr>
                    <td style="font-weight:700">Side Stone Quantity</td>
                    <td>@Model.Product.SideStoneQuantity</td>
                </tr>
                <tr>
                    <td style="font-weight:700">Side Stone Weight</td>
                    <td> @Model.Product.SideStoneWeight</td>
                </tr>
                <tr>
                    <td style="font-weight:700">Gold Type</td>
                    <td> @Model.Product.GoldType</td>
                </tr>
                <tr>
                    <td style="font-weight:700">Gold Karat</td>
                    <td>@Model.Product.GoldKarat</td>
                </tr>
                <tr>
                    <td style="font-weight:700">Gold Weight</td>
                    <td>@Model.Product.GoldWeight</td>
                </tr>
            </table>
        </div>
    </div>
</div>

<div class="py-5 bg-light">
    <div class="container">
        <h3 class="h3">Similar Jewelry</h3>
        <div class="row row-eq-height">
            <!-- Thêm lớp 'row-eq-height' -->
            @foreach (var product in Model.PageProducts.Items)
            {
                <div class="col-md-4 mb-4 d-flex align-items-stretch">
                    <!-- Thêm 'd-flex align-items-stretch' -->
                    <div class="card flex-fill">
                        <!-- Thêm 'flex-fill' -->
                        <div style="height: 225px; overflow: hidden;">
                            @if (product.Images.Any())
                            {
                                var firstImageUrl = product.Images.First().Url;
                                <img src="~/products/@firstImageUrl" class="card-img-top" style="object-fit: cover; width: 100%; height: 100%;" alt="Product Image">
                            }
                            else
                            {
                                <img src="~/images/default-product-image.jpg" class="card-img-top" style="object-fit: cover; width: 100%; height: 100%;" alt="Default Product Image">
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text">$@product.Price</p>
                            <a href="/Views/Home/ProductDetail?id=@product.ProductId" class="btn btn-primary" style="background-color: #013A40; border-color: #005826;">View Details</a>
                        </div>
                    </div>
                </div>
            }

            @if (Model.PageProducts.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?pageIndex=1">First</a>
                        </li>
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?pageIndex=@(Model.CurrentPage - 1)">Previous</a>
                        </li>
                        @for (int i = 1; i <= Model.PageProducts.TotalPages; i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link" href="?pageIndex=@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.PageProducts.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="?pageIndex=@(Model.CurrentPage + 1)">Next</a>
                        </li>
                        <li class="page-item @(Model.CurrentPage == Model.PageProducts.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="?pageIndex=@Model.PageProducts.TotalPages">Last</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

