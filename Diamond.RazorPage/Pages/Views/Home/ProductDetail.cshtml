@page
@model Diamond.RazorPage.Pages.Views.Home.ProductDetailModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="row bg-light py-5">
        <h1 class="text-center text-uppercase text-dark mb-4 display-4">Jewelry Detail</h1>
        <!-- Image Section -->
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide w-75 mx-auto" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @foreach (var imageUrl in Model.Product.Images.Select(i => i.Url))
                    {
                        <div class="carousel-item @(imageUrl == Model.Product.Images.Select(i => i.Url).First() ? "active" : "")">
                            <img src="~/products/@imageUrl" class="d-block w-100 border img-thumbnail" alt="Product Image">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <h2 class="text-primary fw-bold">@Model.ProductDTO.Name</h2>
            <p class="lead">@Model.ProductDTO.Description</p>
            <p class="h4">Price: $@Model.ProductDTO.Price</p>
            <div class="mt-3">
                <button class="btn btn-primary" type="submit" id="button-addon2" style="background-color: #013A40; border-color: #005826;">
                    <i class="bi bi-cart-plus"></i> Add to Cart
                </button>
            </div>
            <table class="table mt-4">
                <tbody>
                    <tr>
                        <th scope="row" style="width: 200px">Category</th>
                        <td>@Model.Product.Category.CategoryName</td>
                    </tr>
                    <tr>
                        <th scope="row">Main Stone Size</th>
                        <td>@Model.Product.MainStoneSize</td>
                    </tr>
                    <tr>
                        <th scope="row">Side Stone Quantity</th>
                        <td>@Model.Product.SideStoneQuantity</td>
                    </tr>
                    <tr>
                        <th scope="row">Side Stone Weight</th>
                        <td>@Model.Product.SideStoneWeight</td>
                    </tr>
                    <tr>
                        <th scope="row">Gold Type</th>
                        <td>@Model.Product.GoldType</td>
                    </tr>
                    <tr>
                        <th scope="row">Gold Karat</th>
                        <td>@Model.Product.GoldKarat</td>
                    </tr>
                    <tr>
                        <th scope="row">Gold Weight</th>
                        <td>@Model.Product.GoldWeight</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="py-5 bg-light">
    <div class="container">
        <h3 class="text-center text-uppercase text-dark mb-4 display-5">Similar Jewelry</h3>
        <div class="row row-eq-height">
            @foreach (var product in Model.PageProducts.Items)
            {
                <div class="col-md-4 mb-4 d-flex align-items-stretch">
                    <div class="card flex-fill shadow-lg border-0">
                        <div style="height: 225px; overflow: hidden;">
                            @if (product.Images.Any())
                            {
                                var firstImageUrl = product.Images.First().Url;
                                <img src="~/products/@firstImageUrl" class="card-img-top" style="object-fit: cover; width: 100%; height: 100%;" alt="Product Image">
                            }
                            else
                            {
                                <img src="~/images/default-product-image.jpg" class="card-img-top" style="object-fit: cover; width: 100%; height: 100%;" alt="Default Product Image">
                            }
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title font-weight-bold text-dark">@product.Name</h5>
                            <p class="card-text text-muted flex-grow-1">@product.Description</p>
                            <p class="card-text text-primary">$@product.Price</p>
                            <a href="/Views/Home/ProductDetail?id=@product.ProductId" class="btn btn-primary mt-auto" style="background-color: #013A40; border-color: #005826;">View Details</a>
                        </div>
                    </div>
                </div>
            }

            @if (Model.PageProducts.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?pageIndex=1">First</a>
                        </li>
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?pageIndex=@(Model.CurrentPage - 1)">Previous</a>
                        </li>
                        @for (int i = 1; i <= Model.PageProducts.TotalPages; i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link" href="?pageIndex=@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.PageProducts.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="?pageIndex=@(Model.CurrentPage + 1)">Next</a>
                        </li>
                        <li class="page-item @(Model.CurrentPage == Model.PageProducts.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="?pageIndex=@Model.PageProducts.TotalPages">Last</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: .25rem;
    }

    .card-body {
        padding: 1.5rem;
        background-color: #ffffff;
    }

    .card-title {
        font-family: 'Lora', serif;
        font-size: 1.5rem;
        font-weight: 700;
        color: #343a40;
    }

    .card-text {
        font-family: 'Lora', serif;
        font-size: 1rem;
        color: #495057;
    }

    .pagination-number {
        background-color: #013A40;
        border-color: #005826;
        color: white;
    }

        .pagination-number:hover {
            background-color: #005826;
            color: white;
        }

    .page-item.active .page-link.pagination-number {
        background-color: #005826;
        border-color: #005826;
        color: white;
    }

    .page-link.pagination-number {
        color: white; /* Ensuring the text color is white */
    }

    .text-primary {
        color: #b38b6d !important; /* Custom primary color for text */
    }

    .display-4 {
        font-family: 'Lora', serif;
        font-size: 2.5rem;
        font-weight: 700;
    }

    .display-5 {
        font-family: 'Lora', serif;
        font-size: 2rem;
        font-weight: 700;
    }
</style>
