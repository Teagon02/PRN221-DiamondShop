@page
@using Newtonsoft.Json
@model Diamond.RazorPage.Pages.Views.Dashboard.DashBoardModel

@{
    Layout = null;
    var productNames = Model.ProductPrices.Select(p => p.Name).ToList();
    var productPrices = Model.ProductPrices.Select(p => p.Price).ToList();
}
<!DOCTYPE html>
<html>
<head>
    <title>ATPro Admin</title>
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
