    </li>
    </ul>
    <!-- end nav right -->
    </div>
    <!-- end navbar -->
    <!-- sidebar -->
    @await Html.PartialAsync("_Sidebar")
    <!-- end sidebar -->
    <!-- main content -->
    <div class="wrapper">
        <div class="row">
            <div class="col-3 col-m-6 col-sm-6">
                <div class="counter bg-primary">
                    <p><i class="fas fa-users"></i></p>
                    <h3>@Model.UserCount</h3>
                    <p>USERS</p>
                </div>
            </div>
            <div class="col-3 col-m-6 col-sm-6">
                <div class="counter bg-warning">
                    <p><i class="fas fa-gem"></i></p>
                    <h3>@Model.ProductCount</h3>
                    <p>PRODUCTS</p>
                </div>
            </div>
            <div class="col-3 col-m-6 col-sm-6">
                <div class="counter bg-success">
                    <p><i class="fas fa-th-list"></i></p>
                    <h3>@Model.CategoryCount</h3>
                    <p>CATEGORIES</p>
                </div>
            </div>
            <div class="col-3 col-m-6 col-sm-6">
                <div class="counter bg-danger">
                    <p><i class="fas fa-shopping-cart"></i></p>
                    <h3>@Model.OrderCount</h3>
                    <p>ORDERS</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-m-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h3>Order List</h3>
                        <i class="fas fa-ellipsis-h"></i>
                    </div>
                    <div class="card-content">
                        <table class="table table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>User</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Comments</th>
                                    <th>Date Created</th>
                                    <th>Phone Number</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.OrderList)
                                {
                                    <tr>
                                        <td>@order.OrderId</td>
                                        <td>@order.UserName</td>
                                        <td>@order.Total.ToString("C")</td>
                                        <td>@order.Status</td>
                                        <td>@order.Comments</td>
                                        <td>@order.DateCreated.ToShortDateString()</td>
                                        <td>@order.PhoneNumber</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-m-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h3>Price Comparison</h3>
                    </div>
                    <div class="card-content">
                        <canvas id="myChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end main content -->
    <!-- import script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
    <script src="~/admin/index.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('myChart').getContext('2d');
            var productNames = @Html.Raw(JsonConvert.SerializeObject(productNames));
            var productPrices = @Html.Raw(JsonConvert.SerializeObject(productPrices));
            var chart = new Chart(ctx, {
                type: 'bar', // or 'line', 'pie', etc.
                data: {
                    labels: productNames,
                    datasets: [{
                        label: 'Product Prices',
                        data: productPrices,
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
        });
    </script>
    <!-- end import script -->
</body>
</html>
