@page
@model Diamond.RazorPage.Pages.Views.OrderPage.DeleteOrderModel
@{
    ViewData["Title"] = "Delete Order";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="display-4">Delete Order</h1>
        <p class="lead text-muted">Are you sure you want to delete this order?</p>
    </div>
</section>

<div class="container py-3">
    <div class="row">
        <div class="col-12">
            @if (Model.Order == null)
            {
                <p class="text-center lead">Order not found.</p>
            }
            else
            {
                <div class="card">
                    <div class="card-header">
                        Order #@Model.Order.OrderId
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Order Summary</h5>
                        <p class="card-text">Order Date: @Model.Order.DateCreated.ToString("dd/MM/yyyy")</p>
                        <p class="card-text">Status: @Model.Order.Status</p>
                        <p class="card-text">Total: @Model.Order.Total.ToString("C")</p>
                        <h5 class="mt-4">Items</h5>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Order.OrderItems)
                                {
                                    <tr>
                                        <td>@item.Product.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>@(item.Quantity * item.Price).ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-right">
                        <form method="post">
                            <button type="submit" class="btn btn-danger">Delete Order</button>
                            <a asp-page="/Orders" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: .25rem;
    }

    .card-body {
        padding: 1.5rem;
        background-color: #ffffff;
    }

    .card-title {
        font-family: 'Lora', serif;
        font-size: 1.5rem;
        font-weight: 700;
        color: #343a40;
    }

    .card-text {
        font-family: 'Lora', serif;
        font-size: 1rem;
        color: #495057;
    }

    .display-4 {
        font-family: 'Lora', serif;
        font-size: 2.5rem;
        font-weight: 700;
    }
</style>