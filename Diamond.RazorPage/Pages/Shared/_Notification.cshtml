@using Diamond.DataAccess.Models
@using Newtonsoft.Json


@{
    var notification = (Notification)ViewData["Notification"];
    // if(notification != null)
    // {
    //     notification = (Notification)TempData["Notifation"];
    // }
    if (notification != null)
    {
        var notificationClass = "";

        switch (notification.Type) 
        {
            case DataAccess.Models.enums.NotificationType.Success:
                notificationClass = "alert-success";
                break;
            case DataAccess.Models.enums.NotificationType.Info:
                notificationClass = "alert-secondary";
                break;
            case DataAccess.Models.enums.NotificationType.Error:
                notificationClass = "alert-danger";
                break;
            default:
                notificationClass = "";
                break;
        }

        <div class="container mb-5">
            <div class="alert @notificationClass alert-dismissible fade show mb-5" role="alert">
                @Html.Raw(notification.Message)
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

