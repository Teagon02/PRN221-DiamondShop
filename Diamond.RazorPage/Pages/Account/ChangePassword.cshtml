@page
@model Diamond.RazorPage.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";

}
<h2>@ViewData["Title"]</h2>

<form method="post">

    <div class="form-group">
        <label for="CurrentPassword">Current Password</label>
        <input type="password" asp-for="Input.CurrentPassword" class="form-control" />
        <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="NewPassword">New Password</label>
        <input type="password" asp-for="Input.NewPassword" class="form-control" />
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Confirm New Password</label>
        <input type="password" asp-for="Input.ConfirmPassword" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Change Password</button>
</form>

<partial name="_ValidationScriptsPartial" />