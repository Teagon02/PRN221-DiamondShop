@page
@model Diamond.RazorPage.Pages.Admin.Categories.UpdateCategoryModel
@{
    ViewData["Title"] = "Update Category";
}

<div class="container mt-5 custom-bg">
    <h2 class="text-center mb-5 text-primary fw-bold fs-3">Update Category</h2>

    @if (Model.Category != null)
    {
        <div class="row">
            <div class="col-md-8 mx-auto">
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">ID</label>
                        <div class="col-sm-8">
                            <input readonly class="form-control-plaintext border border-dark text-muted" value="@Model.Category.CategoryId">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Name</label>
                        <div class="col-sm-8">
                            <input class="form-control border border-dark text-muted" asp-for="CategoryDTO.CategoryName" />
                            <span asp-validation-for="CategoryDTO.CategoryName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Description</label>
                        <div class="col-sm-8">
                            <textarea class="form-control border border-dark text-muted" asp-for="CategoryDTO.Description"></textarea>
                            <span asp-validation-for="CategoryDTO.Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="offset-sm-4 col-sm-4 d-grid">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        <div class="col-sm-4 d-grid">
                            <a class="btn btn-outline-primary text-white" href="/Admin/Categories/ListCategory" role="button">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <p class="text-danger">Category not found.</p>
    }
</div>

<style>
    /* Custom Background */
    .custom-bg {
        background-color: #f9f9f9; /* Light gray background for a clean look */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    }

    /* Form Control Styling */
    .form-control {
        background-color: #ffffff; /* White background */
        color: #333; /* Dark text color */
        border: 1px solid #b38b6d; /* Gold-like border */
    }

        .form-control:focus {
            border-color: #a67c52; /* Darker gold border on focus */
            box-shadow: 0 0 5px rgba(166, 124, 82, 0.5); /* Subtle shadow on focus */
        }

    /* Button Styling */
    .btn-primary {
        background-color: #b38b6d; /* Gold-like background color */
        border-color: #b38b6d; /* Border matches background */
    }

        .btn-primary:hover {
            background-color: #a67c52; /* Darker gold on hover */
            border-color: #a67c52; /* Border matches hover background */
        }

    .btn-outline-primary {
        color: #b38b6d; /* Gold-like text color */
        border-color: #b38b6d; /* Gold-like border */
    }

        .btn-outline-primary:hover {
            color: #fff; /* White text on hover */
            background-color: #b38b6d; /* Gold-like background on hover */
            border-color: #b38b6d; /* Border matches background */
        }

    /* Text Styling */
    .text-primary {
        color: #b38b6d !important; /* Gold-like text color for headings */
    }

    .text-danger {
        color: #e3342f; /* Red color for validation errors */
    }
</style>
