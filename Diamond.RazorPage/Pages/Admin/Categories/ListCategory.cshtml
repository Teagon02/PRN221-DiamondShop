@page
@model Diamond.RazorPage.Pages.Admin.Categories.ListCategoryModel
@{
    ViewData["Title"] = "List of Categories";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" rel="stylesheet" /> <!-- Link to apply site-wide CSS -->
    <style>
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding-top: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .header form {
                display: flex;
                align-items: center;
            }

            .header input[type="text"] {
                padding: 5px 10px;
                font-size: 14px;
                border: 1px solid #ccc; /* Border for input */
                border-radius: 4px; /* Rounded borders */
            }

            .header .btn {
                padding: 5px 10px;
                font-size: 14px;
                text-decoration: none;
                color: white;
                border-radius: 4px;
                cursor: pointer;
                border: 1px solid #005826; /* Border for buttons */
            }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-success {
            background-color: #28a745;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            border: 1px solid #ddd; /* Border for the table */
        }

            .table th,
            .table td {
                border: 1px solid #ddd;
                padding: 12px;
                text-align: center;
                font-size: 0.875rem;
            }

            .table th {
                background-color: #343a40;
                color: white;
                text-transform: uppercase;
            }

            .table tbody tr {
                transition: background-color 0.3s;
            }

                .table tbody tr:hover {
                    background-color: #f1f1f1;
                }

        .pagination {
            list-style-type: none;
            padding: 0;
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

            .pagination li {
                margin: 0 5px;
            }

            .pagination a {
                text-decoration: none;
                padding: 8px 12px;
                color: #007bff;
                border: 1px solid #ddd;
                border-radius: 4px;
            }

            .pagination .active a {
                background-color: #007bff;
                color: white;
            }

            .pagination .disabled a {
                color: #6c757d;
            }

        h2 {
            font-family: 'Georgia', serif;
            color: #013A40;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .btn-danger {
            background-color: #e74c3c;
            border: none;
        }

        .btn-info {
            background-color: #3498db;
            border: none;
        }

            .btn-info i, .btn-danger i {
                color: white;
            }

        .table-responsive {
            border: 1px solid #ddd;
            border-radius: 4px;
            overflow-x: auto;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>All Of Categories</h2>
        <div class="header">
            <form method="get">
                <input type="text" name="searchTerm" placeholder="Search..." value="@Model.SearchTerm" />
                <button class="btn btn-primary" type="submit" id="button-addon2" style="background-color: #013A40; border-color: #005826;">Search</button>
            </form>
            <a class="btn btn-success" href="/Admin/Categories/CreateCategory" style="background-color: #013A40; border-color: #005826;">Create <i class="bi bi-plus-circle"></i></a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Date Created</th>
                        <th>Date Modified</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Pagedcategories.Items)
                    {
                        <tr>
                            <td class="align-middle">@category.CategoryId</td>
                            <td class="align-middle">@category.CategoryName</td>
                            <td class="align-middle">@category.Description</td>
                            <td class="align-middle">@category.DateCreated.ToString("MM/dd/yyyy")</td>
                            <td class="align-middle">@category.DateModified?.ToString("MM/dd/yyyy")</td>
                            <td class="align-middle" style="white-space: nowrap;">
                                <a class="btn btn-danger btn-sm mr-2 mx-2" href="/Admin/Categories/DeleteCategory?id=@category.CategoryId">
                                    <i class="bi bi-trash3-fill"></i>
                                </a>
                                <a class="btn btn-info btn-sm" href="/Admin/Categories/UpdateCategory?id=@category.CategoryId">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="./ListCategory" asp-route-pageIndex="@(Model.CurrentPage - 1)">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.Pagedcategories.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="./ListCategory" asp-route-pageIndex="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage >= Model.Pagedcategories.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="./ListCategory" asp-route-pageIndex="@(Model.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</body>
</html>
