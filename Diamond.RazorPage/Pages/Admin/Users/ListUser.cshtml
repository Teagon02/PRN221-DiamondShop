@page
@model Diamond.RazorPage.Pages.Admin.Users.ListUserModel
@{
    ViewData["Title"] = "List of Users";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" rel="stylesheet" /> <!-- Link to apply site-wide CSS -->
    <style>
        /* CSS styles are kept as provided */
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding-top: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .header form {
                display: flex;
                align-items: center;
            }

            .header input[type="text"] {
                padding: 5px 10px;
                font-size: 14px;
                border: 1px solid #ccc; /* Border for input */
                border-radius: 4px; /* Rounded borders */
            }

            .header .btn {
                padding: 5px 10px;
                font-size: 14px;
                text-decoration: none;
                color: white;
                border-radius: 4px;
                cursor: pointer;
                border: 1px solid #005826; /* Border for buttons */
            }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-success {
            background-color: #28a745;
        }

        .btn-info {
            background-color: #17a2b8;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            border: 1px solid #ddd; /* Border for the table */
        }

            .table th, .table td {
                border: 1px solid #ddd;
                padding: 12px;
                text-align: center;
                font-size: 0.875rem;
            }

            .table th {
                background-color: #343a40;
                color: white;
                text-transform: uppercase;
            }

            .table tbody tr {
                transition: background-color 0.3s;
            }

                .table tbody tr:hover {
                    background-color: #f1f1f1;
                }

        .pagination {
            list-style-type: none;
            padding: 0;
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

            .pagination li {
                margin: 0 5px;
            }

            .pagination a {
                text-decoration: none;
                padding: 8px 12px;
                color: #007bff;
                border: 1px solid #ddd;
                border-radius: 4px;
            }

            .pagination .active a {
                background-color: #007bff;
                color: white;
            }

            .pagination .disabled a {
                color: #6c757d;
            }

        .table td img.avatar-img {
            width: 80px; /* Adjust width as needed */
            height: 80px; /* Adjust height as needed */
            object-fit: cover; /* Ensures the image covers the entire space */
            border-radius: 50%; /* Makes the image circular */
        }

        h2 {
            font-family: 'Georgia', serif; /* Elegant and professional font */
            color: #013A40; /* Deep emerald color */
            font-size: 2.5rem; /* Larger font size for emphasis */
            font-weight: 700; /* Bold weight */
            margin-bottom: 1.5rem; /* Bottom margin for spacing */
            text-align: center; /* Centered text */
            text-transform: uppercase; /* Uppercase text */
            letter-spacing: 2px; /* Increased letter spacing for style */
        }

        .btn-danger {
            background-color: #e74c3c;
            border: none;
        }

        .btn-info {
            background-color: #3498db;
            border: none;
        }

            .btn-info i, .btn-danger i {
                color: white;
            }

        .table-responsive {
            border: 1px solid #ddd;
            border-radius: 4px;
            overflow-x: auto;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h2>All Of Users</h2>
        <div class="header mb-4">
            <form method="get" class="form-inline">
                <input type="text" name="searchTerm" placeholder="Search..." value="@Model.SearchTerm" class="form-control mr-2">
                <button class="btn btn-primary" type="submit" id="button-addon2" style="background-color: #013A40; border-color: #005826;">Search</button>
            </form>
            <a class="btn btn-success" href="/Admin/Users/CreateUser" style="background-color: #013A40; border-color: #005826;">Create <i class="bi bi-plus-circle"></i></a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Avatar</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Created On</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.PagedUsers.Items)
                    {
                        <tr>
                            <td class="align-middle">@user.Id</td>
                            <td class="align-middle">@user.Email</td>
                            <td class="align-middle">@user.Name</td>
                            <td class="align-middle"><img src="/users/@user.Avatar" class="avatar-img" /></td>
                            <td class="align-middle">@user.Phone</td>
                            <td class="align-middle">@user.Address</td>
                            <td class="align-middle">@user.CreateOn.ToString("MM/dd/yyyy")</td>
                            <td class="align-middle">
                                @if (user.Status)
                                {
                                    <span class="text-success">Active</span>
                                }
                                else
                                {
                                    <span class="text-danger">Inactive</span>
                                }
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-info btn-sm" href="/Admin/Users/UpdateUser?id=@user.Id" style="background: #0d6efd ; border:none"><i class="bi bi-pencil-square"></i></a>
                                <a class="btn btn-danger btn-sm" href="/Admin/Users/DeleteUser?id=@user.Id" style="background: red; border: none"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="./ListUser" asp-route-pageIndex="@(Model.CurrentPage - 1)">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.PagedUsers.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="./ListUser" asp-route-pageIndex="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.PagedUsers.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="./ListUser" asp-route-pageIndex="@(Model.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>  
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
