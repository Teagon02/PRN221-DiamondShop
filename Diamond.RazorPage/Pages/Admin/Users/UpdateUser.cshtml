@page
@model Diamond.RazorPage.Pages.Admin.Users.UpdateUserModel
@{
}
<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3 custom-bg">

        <h2 class="text-center mb-5 text-primary fw-bold fs-3">Update User</h2>

        @if (!string.IsNullOrEmpty(Model.errorMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ID</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext border border-dark text-muted" value="@Model.User.Id">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control border border-dark text-muted" asp-for="UserDTO.Email" />
                    <span asp-validation-for="UserDTO.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control border border-dark text-muted" asp-for="UserDTO.Name" />
                    <span asp-validation-for="UserDTO.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Phone</label>
                <div class="col-sm-8">
                    <input class="form-control border border-dark text-muted" asp-for="UserDTO.Phone" />
                    <span asp-validation-for="UserDTO.Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Address</label>
                <div class="col-sm-8">
                    <input class="form-control border border-dark text-muted" asp-for="UserDTO.Address" />
                    <span asp-validation-for="UserDTO.Address" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <img src="~/users/@Model.User.Avatar" width="150" class="border border-dark img-thumbnail" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input class="form-control border border-dark text-muted" asp-for="UserDTO.Avatar">
                    <span asp-validation-for="UserDTO.Avatar" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Created ON</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext border border-dark text-muted" value="@Model.User.CreateOn.ToString("MM/dd/yyyy")">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Status</label>
                <div class="col-sm-8">
                    <select class="form-control border border-dark text-muted" asp-for="UserDTO.Status">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                    <span asp-validation-for="UserDTO.Status" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary text-white" href="/Admin/Users/ListUser" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    /* Custom Background */
    .custom-bg {
        background-color: #f9f9f9; /* Light gray background for a clean look */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    }

    /* Form Control Styling */
    .form-control {
        background-color: #ffffff; /* White background */
        color: #333; /* Dark text color */
        border: 1px solid #b38b6d; /* Gold-like border */
    }

        .form-control:focus {
            border-color: #a67c52; /* Darker gold border on focus */
            box-shadow: 0 0 5px rgba(166, 124, 82, 0.5); /* Subtle shadow on focus */
        }

    /* Button Styling */
    .btn-primary {
        background-color: #b38b6d; /* Gold-like background color */
        border-color: #b38b6d; /* Border matches background */
    }

        .btn-primary:hover {
            background-color: #a67c52; /* Darker gold on hover */
            border-color: #a67c52; /* Border matches hover background */
        }

    .btn-outline-primary {
        color: #b38b6d; /* Gold-like text color */
        border-color: #b38b6d; /* Gold-like border */
    }

        .btn-outline-primary:hover {
            color: #fff; /* White text on hover */
            background-color: #b38b6d; /* Gold-like background on hover */
            border-color: #b38b6d; /* Border matches background */
        }

    /* Text Styling */
    .text-primary {
        color: #b38b6d !important; /* Gold-like text color for headings */
    }

    .text-danger {
        color: #e3342f; /* Red color for validation errors */
    }
</style>
