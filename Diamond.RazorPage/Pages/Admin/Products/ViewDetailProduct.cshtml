@page
@model Diamond.RazorPage.Pages.Admin.Products.ViewDetailProductModel
@{
    ViewData["Title"] = "Product Detail";
}

<div class="container mt-5 custom-bg">
    <h2 class="text-center mb-5 text-primary fw-bold fs-3">Detail of Product</h2>
    @if (Model.Product != null)
    {
        <div class="row">
            <!-- Image Section -->
            <div class="col-md-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @foreach (var imageUrl in Model.Product.Images.Select(i => i.Url))
                        {
                            <div class="carousel-item @(imageUrl == Model.Product.Images.Select(i => i.Url).First() ? "active" : "")">
                                <img src="~/products/@imageUrl" class="d-block w-100 border img-thumbnail" alt="Product Image">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

            <!-- Content Section -->
            <div class="col-md-6">
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">ID</label>
                        <div class="col-sm-8">
                            <input readonly class="form-control-plaintext" value="@Model.Product.ProductId">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductDTO.Name" />
                            <span asp-validation-for="ProductDTO.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Description</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" asp-for="ProductDTO.Description"></textarea>
                            <span asp-validation-for="ProductDTO.Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label">Category</label>
                        <div class="col-sm-8">
                            <select class="form-control" asp-for="ProductDTO.CategoryId">
                                <option value="">Select a Category</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.CategoryId">@category.CategoryName</option>
                                }
                            </select>
                            <span asp-validation-for="ProductDTO.CategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Main Stone Size</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductDTO.MainStoneSize" />
                            <span asp-validation-for="ProductDTO.MainStoneSize" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Side Stone Type</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductDTO.SideStoneType" />
                            <span asp-validation-for="ProductDTO.SideStoneType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Side Stone Quantity</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductDTO.SideStoneQuantity" />
                            <span asp-validation-for="ProductDTO.SideStoneQuantity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Side Stone Weight</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductDTO.SideStoneWeight" />
                            <span asp-validation-for="ProductDTO.SideStoneWeight" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Gold Type</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductDTO.GoldType" />
                            <span asp-validation-for="ProductDTO.GoldType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Gold Karat</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductDTO.GoldKarat" />
                            <span asp-validation-for="ProductDTO.GoldKarat" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Gold Weight</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductDTO.GoldWeight" />
                            <span asp-validation-for="ProductDTO.GoldWeight" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Status</label>
                        <div class="col-sm-8">
                            <select class="form-control" asp-for="ProductDTO.Status">
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                            <span asp-validation-for="ProductDTO.Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Price</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductDTO.Price" />
                            <span asp-validation-for="ProductDTO.Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Date Created</label>
                        <div class="col-sm-8">
                            <input readonly class="form-control-plaintext" value="@Model.Product.DateCreated.ToString("MM/dd/yyyy")">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Date Modified</label>
                        <div class="col-sm-8">
                            <input readonly class="form-control-plaintext" value="@Model.Product.DateModified?.ToString("MM/dd/yyyy")">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="offset-sm-4 col-sm-4 d-grid">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                        <div class="col-sm-4 d-grid">
                            <a class="btn btn-outline-primary" href="/Admin/Products/ListProducts" role="button">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <p class="text-danger">Product not found.</p>
    }
</div>
