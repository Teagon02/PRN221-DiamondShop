@page
@model Diamond.RazorPage.Pages.Admin.Products.ListProductsModel
@{
}
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" rel="stylesheet" /> <!-- Thêm thẻ link này để áp dụng CSS từ site.css -->

</head>

<body>
    <div class="container mt-5">
        <h2 class="text-center mb-5 text-primary fw-bold fs-3">List All Product</h2>
        <div class="row mb-4">
            <div class="col text-right">
                <a class="btn btn-success" href="/Admin/Products/CreateProduct">Create <i class="bi bi-plus-circle"></i></a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr style="font-size: small">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Size</th>
                        <th>Type</th>
                        <th>Weight</th>
                        <th>Price</th>
                        <th>Date Created</th>
                        <th>Status</th>
                        <th class="d-flex justify-content-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.PageProducts.Items)
                    {
                        <tr style="font-size: small">
                            <td class="align-middle">
                                <div class="d-flex justify-content-center">
                                    @product.ProductId
                                </div>
                            </td>

                            <td class="align-middle">

                                <div class="d-flex justify-content-center">
                                    @product.Name
                                </div>
                            </td>

                            <td class="align-middle">
                                <div class="d-flex justify-content-center">
                                    @product.Category.CategoryName
                                </div>
                            </td>

                            <td class="align-middle">
                                <div class="d-flex justify-content-center">
                                    @product.MainStoneSize
                                </div>
                            </td>

                            <td class="align-middle">
                                <div class="d-flex justify-content-center">
                                    @product.SideStoneType
                                </div>
                            </td>

                            <td class="align-middle">
                                <div class="d-flex justify-content-center">
                                    @product.SideStoneWeight
                                </div>
                            </td>

                            <td class="align-middle">
                                <div class="d-flex justify-content-center">
                                    @(product.Price)$
                                </div>
                            </td>

                            <td class="align-middle">
                                <div class="d-flex justify-content-center">
                                    @product.DateCreated.ToString("MM/dd/yyyy")
                                </div>
                            </td>

                            <td class="align-middle" style="font-weight:bold">
                                <div class="d-flex justify-content-center">
                                    @product.Status
                                </div>
                            <td class="align-middle" style="white-space: nowrap; vertical-align: middle;">
                                <div class="d-flex justify-content-center">
                                    <a class="btn btn-info btn-sm" href="/Admin/Products/ViewDetailProduct?id=@product.ProductId">View Detail</a>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="/Admin/Products/ListProducts" asp-route-pageIndex="@(Model.CurrentPage - 1)">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.PageProducts.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="/Admin/Products/ListProducts" asp-route-pageIndex="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage >= Model.PageProducts.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="/Admin/Products/ListProducts" asp-route-pageIndex="@(Model.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>

        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>