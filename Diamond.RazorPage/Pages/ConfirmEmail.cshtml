@page
@model Diamond.RazorPage.Pages.ConfirmEmailModel
@{
}
@if(Model.Message != null)
{
    <div class="alert alert-success">
        Your email has been confirmed successfully. You can now <a asp-page="/Account/Login">login</a>.
    </div>
}
else
{
    <div class="alert alert-danger">
        There was an error confirming your email. Please try again.
    </div>
}
<a asp-page="/Login" class="btn btn-primary">Back to Login</a>
